@using Microsoft.AspNetCore.Identity

@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="DangXuat" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav">
            <li class="nav-item">
                <span class="nav-link text-dark">Xin chào, @User.Identity.Name!</span>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link nav-link text-dark">Đăng xuất</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="DangKy">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="DangNhap">Đăng nhập</a>
        </li>
    </ul>
}