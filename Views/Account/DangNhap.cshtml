@model TrungTamDaoTao.ViewModels.DangNhapViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-action="DangNhap" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="TaiKhoan" class="control-label"></label>
                        <input asp-for="TaiKhoan" class="form-control" />
                        <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MatKhau" class="control-label"></label>
                        <input asp-for="MatKhau" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RememberMe" /> @Html.CheckBoxFor(model => model.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    </div>
                    <div class="text-center">
                        <p>
                            Chưa có tài khoản? 
                            <a asp-action="DangKy">Đăng ký ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}