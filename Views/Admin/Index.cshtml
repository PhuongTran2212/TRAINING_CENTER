@{
    ViewData["Title"] = "Trang quản trị";
}
@* trangcuaadmin *@
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Quản trị hệ thống</h1>
            <p class="lead">Chào mừng đến với trang quản trị Trung Tâm Đào Tạo</p>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book-open fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Quản lý khóa học</h5>
                    <p class="card-text">Thêm, sửa, xóa và quản lý các khóa học trong hệ thống.</p>
                    <a asp-controller="KhoaHoc" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-1"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Quản lý học viên</h5>
                    <p class="card-text">Xem thông tin và quản lý tài khoản học viên trong hệ thống.</p>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-arrow-right me-1"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Thống kê</h5>
                    <p class="card-text">Xem báo cáo thống kê và dữ liệu phân tích của trung tâm.</p>
                    <a asp-controller="ThongKe" asp-action="Index" class="btn btn-info">
                        <i class="fas fa-arrow-right me-1"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-bell text-warning me-2"></i>Thông báo mới nhất</h5>
                    <hr />
                    <div class="list-group list-group-flush">
                        <!-- Các thông báo sẽ được hiển thị ở đây -->
                        <div class="list-group-item border-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Cập nhật hệ thống</h6>
                                <small>3 ngày trước</small>
                            </div>
                            <p class="mb-1">Hệ thống đã được cập nhật với các tính năng mới.</p>
                        </div>
                        <div class="list-group-item border-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Bảo trì hệ thống</h6>
                                <small>1 tuần trước</small>
                            </div>
                            <p class="mb-1">Hệ thống sẽ được bảo trì vào ngày 30/04/2025.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-tasks text-danger me-2"></i>Công việc cần xử lý</h5>
                    <hr />
                    <div class="list-group list-group-flush">
                        <!-- Các công việc sẽ được hiển thị ở đây -->
                        <div class="list-group-item border-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Xác nhận đăng ký khóa học</h6>
                                <span class="badge bg-danger">5 chờ xử lý</span>
                            </div>
                            <p class="mb-1">Các đăng ký mới cần được xác nhận.</p>
                            <a href="#" class="btn btn-sm btn-outline-primary mt-2">Xem chi tiết</a>
                        </div>
                        <div class="list-group-item border-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Phản hồi liên hệ</h6>
                                <span class="badge bg-warning text-dark">3 chờ xử lý</span>
                            </div>
                            <p class="mb-1">Các yêu cầu liên hệ mới từ học viên.</p>
                            <a href="#" class="btn btn-sm btn-outline-primary mt-2">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>