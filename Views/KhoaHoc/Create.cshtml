@model TrungTamDaoTao.ViewModels.KhoaHocViewModel

@{
    ViewData["Title"] = "Tạo khóa học mới";
}

<h2>Tạo khóa học mới</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="TenKhoaHoc" class="control-label"></label>
                <input asp-for="TenKhoaHoc" class="form-control" />
                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="GiangVien" class="control-label"></label>
                <input asp-for="GiangVien" class="form-control" />
                <span asp-validation-for="GiangVien" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ThoiGianKhaiGiang" class="control-label"></label>
                <input asp-for="ThoiGianKhaiGiang" class="form-control" type="date" />
                <span asp-validation-for="ThoiGianKhaiGiang" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="HocPhi" class="control-label"></label>
                <input asp-for="HocPhi" class="form-control" />
                <span asp-validation-for="HocPhi" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="SoLuongToiDa" class="control-label"></label>
                <input asp-for="SoLuongToiDa" class="form-control" />
                <span asp-validation-for="SoLuongToiDa" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NgayBatDau" class="control-label"></label>
                <input asp-for="NgayBatDau" class="form-control" type="date" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="NgayKetThuc" class="control-label"></label>
                <input asp-for="NgayKetThuc" class="form-control" type="date" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Styles {
    <link rel="stylesheet" href="~/css/taokhoahoc.css" />
}